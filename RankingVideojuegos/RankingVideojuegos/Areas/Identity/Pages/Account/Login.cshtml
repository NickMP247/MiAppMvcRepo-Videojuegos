@page
@model LoginModel
@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container mt-5" data-aos="fade-up">
    <div class="edit-form mx-auto" style="max-width: 500px;" data-aos="zoom-in">
        <h2 class="neon-title-purple text-center mb-4">Iniciar sesión</h2>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label text-light" asp-for="Input.RememberMe">
                    Recordarme
                </label>
            </div>

            <button type="submit" class="btn btn-gradient w-100">Entrar</button>
        </form>

        <div class="text-center mt-4">
            <p class="text-muted">¿No tienes cuenta?</p>
            <a asp-page="/Account/Register" class="btn btn-neon btn-sm">Registrarse</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
