@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="container mt-5" data-aos="fade-up">
    <div class="edit-form mx-auto" style="max-width: 500px;" data-aos="zoom-in">
        <h2 class="neon-title-purple text-center mb-4">Crear nueva cuenta</h2>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-gradient w-100 mt-2">Registrarse</button>
        </form>

        <div class="text-center mt-4">
            <p class="text-muted">¿Ya tienes cuenta?</p>
            <a asp-page="/Account/Login" class="btn btn-neon btn-sm">Iniciar sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
